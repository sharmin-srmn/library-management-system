<!-- HEADER  -->
<%- include('./partial/header.ejs')%>

<div class="main-container container-fluid py-5 min-height">
  <div class="row">
    <div
      class="d-flex flex-column align-items-center justify-content-center col-6"
    >
      <div class="title-container mb-5">
        <h2 class="title-text">add new book information</h2>
      </div>
      <div class="form-container">
        <form action="" method="post">
          <div class="mb-4">
            <label for="bookName" class="form-label capitalized-text">
              book's name</label
            >
            <input
              type="text"
              class="form-control"
              id="bookName"
              name="bookName"
            />
          </div>
          <div class="mb-4">
            <label for="authorName" class="form-label capitalized-text">
              author's name</label
            >
            <input
              type="text"
              class="form-control"
              id="authorName"
              name="authorName"
            />
          </div>
          <div class="mb-4">
            <label for="edition" class="form-label capitalized-text">
              edition</label
            >
            <input
              type="text"
              class="form-control"
              id="edition"
              name="edition"
            />
          </div>
          <div class="mb-4">
            <label for="publish" class="form-label capitalized-text">
              published year</label
            >
            <input
              type="text"
              class="form-control"
              id="publish"
              name="publish"
            />
          </div>
          <div class="mb-4">
            <label for="stock" class="form-label capitalized-text">
              stock</label
            >
            <input type="text" class="form-control" id="stock" name="stock" />
          </div>
          <button class="btn btn-dark capitalized-text">submit</button>
          <button type="button" class="btn btn-primary capitalized-text">
            <a href="/book" class="text-light"
              ><i class="fa-solid fa-arrow-left"></i
              ><span class="span-text">back</span></a
            >
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- FOOTER  -->
<%- include('./partial/footer.ejs')%>
