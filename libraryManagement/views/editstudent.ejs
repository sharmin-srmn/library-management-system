<!-- HEADER  -->
<%- include('./partial/header.ejs')%>

<div class="main-container container-fluid py-5">
  <div class="row">
    <div
      class="add-student-container d-flex flex-column align-items-center justify-content-center min-height col-6"
    >
      <div class="title-container mb-5">
        <h2 class="title-text">edit student</h2>
      </div>
      <div class="form-container">
        <!-- // libarary id card, enrollment date  -->
        <form action="/updatestudent/<%= data._id%>" method="POST">
          <!-- NAME  -->
          <div class="mb-4">
            <label for="name " class="form-label capitalized-text">
              student's name</label
            >
            <input
              type="text"
              class="form-control"
              id="name"
              name="name"
              value="<%= data.name%>"
            />
          </div>
          <!-- EMAIL  -->
          <div class="mb-4">
            <label for="email " class="form-label capitalized-text">
              email</label
            >
            <input
              type="email"
              class="form-control"
              id="email"
              name="email"
              value="<%= data.email%>"
            />
          </div>
          <!-- DATE OF BIRTH  -->
          <div class="mb-4">
            <label for="dob " class="form-label capitalized-text">
              date of birth</label
            >
            <input
              type="text"
              class="form-control"
              id="dob"
              name="dob"
              value="<%= data.dob%>"
            />
          </div>
          <!-- GENDER  -->
          <div class="mb-4">
            <label for="gender " class="form-label capitalized-text">
              gender</label
            >
            <select
              id="gender"
              name="gender"
              class="form-control form-select capitalized-text"
            >
              <option value="" disabled >select gender</option>
              <option value="male" <%= data.gender === 'male' ? 'selected' : '' %> >male</option>
              <option value="female" <%= data.gender === 'female' ? 'selected' : '' %>>female</option>
              <option value="other" <%= data.gender === 'other' ? 'selected' : '' %>>other</option>
            </select>
          </div>

          <!-- ADDRESS  -->
          <div class="mb-4">
            <label for="address " class="form-label capitalized-text">
              address</label
            >
            <input
              type="text"
              class="form-control"
              id="address"
              name="address"
              value="<%= data.address%>"
            />
          </div>

          <!-- PHONE NUMBER  -->
          <div class="mb-4">
            <label for="phone " class="form-label capitalized-text">
              phone number</label
            >
            <input
              type="text"
              class="form-control"
              id="phone"
              name="phone"
              value="<%= data.phone%>"
            />
          </div>

          <!-- ALTER NATIVE PHONE  -->
          <div class="mb-4">
            <label for="altphone " class="form-label capitalized-text">
              alternative phone number</label
            >
            <input
              type="text"
              class="form-control"
              id="altphone"
              name="altphone"
              value="<%= data.altphone%>"
            />
          </div>

          <!-- DEPARTMENT  -->
          <div class="mb-4">
            <label for="department " class="form-label capitalized-text">
              department</label
            >
            <input
              type="text"
              class="form-control"
              id="department"
              name="department"
              value="<%= data.department%>"
            />
          </div>

          <!-- STATUS  -->
          <div class="mb-4">
            <label for="status " class="form-label capitalized-text">
              status</label
            >
            <select
              id="status"
              name="status"
              class="form-control form-select capitalized-text"
            >
              <option value="" disabled >Select status</option>
              <option value="active" <%= data.status === 'active' ? 'selected' : " " %> >active</option>
              <option value="graduated" <%= data.status === 'graduated' ? 'selected' : " " %> >graduated</option>
              <option value="inactive" <%= data.status === 'inactive' ? 'selected' : " " %> >inactive</option>
              <option value="dropped out" <%= data.status === 'dropped out' ? 'selected' : " " %> >dropped out</option>
              <option value="expelled" <%= data.status === 'expelled' ? 'selected' : " " %> >expelled</option>
            </select>
          </div>

          <!-- ENROLLLMENT DTAE  -->
          <div class="mb-4">
            <label for="enrollmentDate " class="form-label capitalized-text">
              enrollment date</label
            >
            <input
              type="date"
              class="form-control"
              id="enrollmentDate"
              name="enrollmentDate"
              value="<%=data.enrollmentDate ? data.enrollmentDate.toISOString : ' '%>"
            />
          </div>

          <!-- EXPECTED GRADUATION DATE  -->
          <div class="mb-4">
            <label
              for="expectedGraduationDate "
              class="form-label capitalized-text"
            >
              expected graduation date</label
            >
            <input
              type="date"
              class="form-control"
              id="expectedGraduationDate"
              name="expectedGraduationDate"
              value="<%= data.expectedGraduationDate ? data.expectedGraduationDate.toISOString().substring(0, 10) :' '%> "
            />
          </div>

          <!-- BUTTONS GROUP  -->
          <button type="submit" class="btn btn-dark capitalized-text">
            submit
          </button>
          <button type="button" class="btn btn-primary capitalized-text">
            <a href="/allstudents" class="text-light"
              ><i class="fa-solid fa-arrow-left"></i
              ><span class="span-text">back</span></a
            >
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- FOOTER  -->
<%- include('./partial/footer.ejs')%>
